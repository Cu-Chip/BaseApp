        app:layout_constraintEnd_toStartOf="@+id/apccIc11"
        app:layout_constraintTop_toTopOf="parent" />

    <com.apcc.view.XIcon
        android:id="@+id/apccIc11"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/apccIc10"
